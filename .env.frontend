# SeaBasket Web Frontend Environment Configuration
# Copy this to .env and update values as needed

# Application
APP_NAME="SeaBasket Web Frontend"
APP_ENV=local
APP_DEBUG=true

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=10000

# Frontend Configuration
VITE_APP_NAME="SeaBasket Online Seafood Store"
VITE_APP_URL=http://localhost:3000

# Google OAuth (for frontend)
VITE_GOOGLE_CLIENT_ID=741212996994-vk4id964qvk07r14gvce24p95tbi5tc6.apps.googleusercontent.com

# Development Settings
VITE_DEV_MODE=true
VITE_SHOW_DEBUG_INFO=true

# Feature Flags
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_CART_PERSISTENCE=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_RECIPE_REVIEWS=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ITEMS_PER_PAGE=12
VITE_MAX_CART_ITEMS=99

# Image Configuration
VITE_DEFAULT_PRODUCT_IMAGE=/images/default-product.jpg
VITE_DEFAULT_RECIPE_IMAGE=/images/default-recipe.jpg
VITE_IMAGE_QUALITY=80

# Cache Configuration
VITE_CACHE_PRODUCTS=true
VITE_CACHE_RECIPES=true
VITE_CACHE_DURATION=300000

# Analytics (if needed)
# VITE_GOOGLE_ANALYTICS_ID=
